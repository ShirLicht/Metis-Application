<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/comfortaa_light"/>

    <TextView
        android:id="@+id/list_item_price"
        android:layout_width="52dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_toRightOf="@id/list_item_name"
        android:fontFamily="@font/comfortaa_light"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/addItemBtn"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintStart_toEndOf="@+id/list_item_name"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addItemBtn"
        android:layout_width="44dp"
        android:layout_height="42dp"
        android:layout_marginEnd="4dp"
        android:layout_toRightOf="@id/list_item_price"
        android:background="@android:drawable/ic_input_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>